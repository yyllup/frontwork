<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.FindMapper">

    <sql id="Base_Column_List">
        id,name,img,user_id,status,content,time
    </sql>

    <select id="selectAll" resultType="com.example.entity.Find">
        select find.*, user.name as userName
        from find
        left join user on find.user_id=user.id
        <where>
            <if test="id != null"> and id= #{id}</if>
            <if test="name != null"> and find.name like concat('%', #{name}, '%')</if>
            <if test="userId != null"> and user_id= #{userId}</if>
        </where>
        order by id desc
    </select>

    <select id="selectById" resultType="com.example.entity.Find">
        select
        <include refid="Base_Column_List" />
        from find
        where id = #{id}
    </select>

    <delete id="deleteById">
        delete from find
        where  id = #{id}
    </delete>

    <insert id="insert" parameterType="com.example.entity.Find" useGeneratedKeys="true">
        insert into find
        <trim prefix="(" suffix=")" suffixOverrides=",">
                <if test="id != null">id,</if>
                <if test="name != null">name,</if>
                <if test="img != null">img,</if>
                <if test="userId != null">user_id,</if>
                <if test="status != null">status,</if>
            <if test="content != null">content,</if>
            <if test="time != null">time,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
                <if test="id != null">#{id},</if>
                <if test="name != null">#{name},</if>
                <if test="img != null">#{img},</if>
                <if test="userId != null">#{userId},</if>
                <if test="status!= null">#{status},</if>
            <if test="content!= null">#{content},</if>
            <if test="time!= null">#{time},</if>
        </trim>
    </insert>

    <update id="updateById" parameterType="com.example.entity.Find">
        update find
        <set>
            <if test="name != null">
                name = #{name},
            </if>
            <if test=" img!= null">
                img = #{img},
            </if>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
            <if test="content != null">
                content = #{content},
            </if>
            <if test="time != null">
                time = #{time},
            </if>
        </set>
        where id = #{id} 
    </update>

</mapper>