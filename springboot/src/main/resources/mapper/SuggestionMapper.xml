<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.SuggestionMapper">

    <sql id="Base_Column_List">
        id,user_id,content,time
    </sql>

    <select id="selectAll" resultType="com.example.entity.Suggestion">
        select suggestion.*,user.avatar,user.name as userName
        from suggestion
        left join  user on suggestion.user_id=user.id
        <where>
            <if test="id != null"> and id= #{id}</if>
            <if test="content != null"> and content like concat('%',#{content},'%')</if>
        </where>
        order by id desc
    </select>

    <select id="selectById" resultType="com.example.entity.Suggestion">
        select
        <include refid="Base_Column_List" />
        from suggestion
        where id = #{id}
    </select>

    <delete id="deleteById">
        delete from suggestion
        where  id = #{id}
    </delete>

    <insert id="insert" parameterType="com.example.entity.Suggestion" useGeneratedKeys="true">
        insert into suggestion
        <trim prefix="(" suffix=")" suffixOverrides=",">
                <if test="id != null">id,</if>
                <if test="userId != null">user_id,</if>
                <if test="content != null">content,</if>
                <if test="time != null">time,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
                <if test="id != null">#{id},</if>
                <if test="userId != null">#{userId},</if>
                <if test="content != null">#{content},</if>
                <if test="time != null">#{time},</if>
        </trim>
    </insert>

    <update id="updateById" parameterType="com.example.entity.Suggestion">
        update suggestion
        <set>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="content != null">
                content = #{content},
            </if>
            <if test="time != null">
                time = #{time},
            </if>
        </set>
        where id = #{id} 
    </update>

</mapper>